# AquaAI API - Configuración
# Copia este archivo a .env y completa con tus valores
# NO SUBAS EL ARCHIVO .env A GIT

# Información de la aplicación
APP_NAME="AquaAI - API de Predicción de Embalses"
APP_VERSION="1.0.0"
APP_DESCRIPTION="API REST para predicción de niveles de embalses usando LSTM Seq2Seq con datos meteorológicos AEMET"

# Configuración del servidor
HOST=0.0.0.0
PORT=8000
DEBUG=False
RELOAD=False
LOG_LEVEL=INFO

# Ollama - Recomendaciones Inteligentes con IA
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=phi3.5:latest
ENABLE_LLM_RECOMENDACIONES=False
OLLAMA_TIMEOUT=45
OLLAMA_MAX_RETRIES=2
OLLAMA_TEMPERATURE=0.7
OLLAMA_TOP_P=0.9
LLM_CACHE_TTL=86400
LLM_CACHE_ENABLED=True

# Base de datos PostgreSQL
DB_USER=user
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aquaia
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECT_TIMEOUT=30

# Seguridad (genera con: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-in-production-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# API Keys (separadas por coma, vacío para deshabilitar)
API_KEYS=

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080
CORS_ALLOW_CREDENTIALS=True

# Modelo de predicción
MODEL_PATH=resources/Training_Aemet/modelo_embalses_aemet.pth
SCALERS_PATH=resources/Training_Aemet/artifacts/scalers.npy
METRICS_PATH=resources/Training_Aemet/artifacts/metrics.json

# Parámetros del modelo (se sobrescriben desde checkpoint)
MODEL_LOOKBACK=90
MODEL_HORIZON=180
MODEL_HIDDEN_SIZE=128
MODEL_NUM_LAYERS=2
MODEL_DROPOUT=0.2
MODEL_FEATURES=22
MODEL_SIGMA_FORECAST=0.05

# Parámetros de predicción por defecto
DEFAULT_PREDICTION_HORIZON=90
DEFAULT_RISK_MIN_THRESHOLD=300.0
DEFAULT_RISK_MAX_THRESHOLD=350.0

# Caché y optimización
ENABLE_CACHE=True
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Configuración de Informes
REPORT_MODEL_VERSION=v1.2_AEMET
REPORT_DEFAULT_USER=tecnico_operativo

# Rate limiting
ENABLE_RATE_LIMIT=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Integración AEMET (opcional)
AEMET_API_KEY=
AEMET_API_URL=https://opendata.aemet.es/opendata/api

# Monitorización
ENABLE_METRICS=True
ENABLE_TRACING=False
SENTRY_DSN=

# Backup
BACKUP_DIR=./backups
ENABLE_AUTO_BACKUP=False
BACKUP_FREQUENCY_HOURS=24
