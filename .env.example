# ============================================================================
# AquaAI - Configuración Docker Compose (EJEMPLO)
# ============================================================================
# Copia este archivo a .env y ajusta los valores según tu entorno
# IMPORTANTE: NO subir el archivo .env a Git

# ============================================================================
# BASE DE DATOS POSTGRESQL
# ============================================================================
POSTGRES_DB=aquaia
POSTGRES_USER=admin_aquaia
POSTGRES_PASSWORD=CAMBIAR_CONTRASEÑA_SEGURA
POSTGRES_PORT=5432

# ============================================================================
# API BACKEND
# ============================================================================
APP_NAME="AquaAI - API de Predicción de Embalses"
APP_VERSION="1.0.0"
API_PORT=8000
DEBUG=False
LOG_LEVEL=INFO

# Seguridad - Genera una clave aleatoria: openssl rand -hex 32
SECRET_KEY=CAMBIAR_CLAVE_SECRETA_MINIMO_32_CARACTERES

# Base de datos (conexión interna Docker)
DB_USER=admin_aquaia
DB_PASSWORD=CAMBIAR_CONTRASEÑA_SEGURA
DB_HOST=postgres
DB_PORT=5432
DB_NAME=aquaia

# ============================================================================
# OLLAMA - LLM PARA RECOMENDACIONES
# ============================================================================
OLLAMA_PORT=11434
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=phi3.5:latest
ENABLE_LLM_RECOMENDACIONES=True

# ============================================================================
# WEBUI (OPCIONAL)
# ============================================================================
WEBUI_PORT=3333

# ============================================================================
# REDIS - CACHE
# ============================================================================
REDIS_PORT=6379
REDIS_HOST=redis
ENABLE_CACHE=True
CACHE_TTL=3600

# ============================================================================
# FRONTEND
# ============================================================================
FRONTEND_PORT=80
VITE_API_URL=http://localhost:8000

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:3000

# ============================================================================
# RATE LIMITING
# ============================================================================
ENABLE_RATE_LIMIT=True
RATE_LIMIT_REQUESTS=1000

# ============================================================================
# INTEGRACIÓN AEMET
# ============================================================================
AEMET_API_KEY=tu_api_key_de_aemet_aqui
ENABLE_LLM_RECOMENDACIONES=True

# ===============================================
# WEBUI (OPCIONAL)
# ===============================================
WEBUI_PORT=3333

# ===============================================
# REDIS
# ===============================================
REDIS_PORT=6379
ENABLE_CACHE=True
CACHE_TTL=3600

# ===============================================
# FRONTEND
# ===============================================
FRONTEND_PORT=80
# URL de la API (accesible desde el navegador)
VITE_API_URL=http://localhost:8000

# ===============================================
# CORS - Orígenes permitidos (separados por coma)
# ===============================================
CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:3000

# ===============================================
# RATE LIMITING
# ===============================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
